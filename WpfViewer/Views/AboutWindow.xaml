<Window x:Class="Viewer.AboutWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        Title="About" Height="174.801" Width="370.292"
        WindowStartupLocation="CenterScreen">
    <Grid>
        <Label FontSize="24" Content="{Binding ApplicationName}" HorizontalAlignment="Center" Margin="10,10,10,0" VerticalAlignment="Top"/>
        <Label FontSize="20" Content="{Binding VersionString}" HorizontalAlignment="Center" Margin="10,42,10,0" VerticalAlignment="Top"/>
        <TextBlock TextWrapping="Wrap" HorizontalAlignment="Stretch" ScrollViewer.CanContentScroll="true" ScrollViewer.HorizontalScrollBarVisibility="Disabled" ScrollViewer.VerticalScrollBarVisibility="Auto" Margin="10,93,10,10"
                   Text="{Binding Description}"/>
    </Grid>
</Window>
